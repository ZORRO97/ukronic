{% extends 'UkronicBundle::layout.html.twig' %}

{% block content %}
	{# page du film #}
	<div class="container-fluid">
		<p class="text-center">RECHERCHE : {{ movie.title }}</p>

		<div class="row">
			<div class="col-md-3">
				<img src= {{ movie.posterURL }} alt= {{ movie.title }} >
			</div>
			<div class="col-md-9">
				<p>NOM DU FILM : {{ movie.title }} </p>
				<p>DATE DE SORTIE : {{ movie.productionYear }} </p>
				<p>CASTING : {{ movie.casting }} </p>
				<p>SCRIPT : <pre> {{ movie.script }} </pre></p>
			</div>

		</div>
		<div class="row">
			<div class="col-md-4">
				<h2 class="text-center">HYPOTHESE DE FIN</h2>
				<div class="display-Decrypt">
					<div>
						
	
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : '-100','filter_seq' : filter_seq }) }}" class="decrypt-display-change">-100</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : '-300','filter_seq' : filter_seq }) }}" class="decrypt-display-change">-300</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : '+300','filter_seq' : filter_seq }) }}" class="decrypt-display-change">+300</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : 'read','filter_seq' : filter_seq }) }}" class="decrypt-display-change">+lus</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : 'liked','filter_seq' : filter_seq }) }}" class="decrypt-display-change">+likés</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : 'comment','filter_seq' : filter_seq }) }}" class="decrypt-display-change">+commentés</a>
					
					</div>
				
				{{render(controller('UkronicBundle:Decrypt:display',{'idMovie': movie.id ,'filter': filter_end ,'typeDecrypt':'F'})) }}

				</div>
				
				

				{% if is_granted("ROLE_USER") %}
				<p><a href="{{ path('decrypt', {'idMovie': movie.id}) }}">Ajouter une critique</a></p>
				{% endif %}
			</div>
			<div class="col-md-4 col-md-offset-2">
				<h2 class="text-center">SEQUENCE</h2>

				<div id="sequence-decrypt">
					<div>
	
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : filter_end ,'filter_seq' : "-100" }) }}" class="decrypt-display-change">-100</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : filter_end,'filter_seq' : "-300" }) }}" class="decrypt-display-change">-300</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : filter_end,'filter_seq' : "+300" }) }}" class="decrypt-display-change">+300</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : filter_end,'filter_seq' : "read" }) }}" class="decrypt-display-change">+lus</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : filter_end,'filter_seq' : "liked" }) }}" class="decrypt-display-change">+likés</a>
					<a class="buttond" href = "{{ path('dbukronic',{'id' : movie.id, 'filter_end' : filter_end,'filter_seq' : "comment" }) }}" class="decrypt-display-change">+commentés</a>
					
					</div>

				{{render(controller('UkronicBundle:Decrypt:display',{'idMovie': movie.id,'filter': filter_seq ,'typeDecrypt':'S'})) }}

				</div>
				
			</div>
		</div>

	</div>


{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
	$(function(){
		$(".decrypt-display-change").click(function(){
			console.log("bouton cliqué");

			$("#sequence-decrypt").html();
		});
	});
	</script>
    
{% endblock %}