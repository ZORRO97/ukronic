{% extends 'UkronicBundle::layout.html.twig' %}

{% macro buttonLink(idMovie,fe,typeDecrypt,texte,filter_end,filter_seq) %}
	{% if typeDecrypt == "F" %}
		{% if fe == filter_end %}
			<a class="btn btn-info" href = "{{ path('dbukronic',{'id' : idMovie , 'filter_end' : fe  ,'filter_seq' : filter_seq }) }}" >{{ texte }}</a>
		{% else %}
			<a class="btn btn-default" href = "{{ path('dbukronic',{'id' :  idMovie , 'filter_end' : fe ,'filter_seq' : filter_seq }) }}" >{{ texte }}</a>
		{% endif %}
		
	{% else %}
		{% if fe == filter_seq %}
			<a class="btn btn-info" href = "{{ path('dbukronic',{'id' : idMovie , 'filter_end' : filter_end ,'filter_seq' : fe }) }}" >{{ texte }}</a>
		{% else %}
			<a class="btn btn-default" href = "{{ path('dbukronic',{'id' : idMovie , 'filter_end' : filter_end ,'filter_seq' : fe }) }}" >{{ texte }}</a>
		{% endif %}
	{% endif %}
		
	
{% endmacro %}

{% import _self as tools %}


{% block content %}
	{# page du film #}
	<div class="container-fluid">
		<p class="text-center">TITRE : {{ movie.title }}</p>

		<div class="row">
			<div class="col-md-3">
				<img src= {{ movie.posterURL }} alt= {{ movie.title }} >
			</div>
			<div class="col-md-9">
				<p>NOM DU FILM : {{ movie.title }} </p>
				<p>DATE DE SORTIE : {{ movie.productionYear }} </p>
				<p>CASTING : {{ movie.casting }} </p>
				<p>SCRIPT : <pre> {{ movie.script }} </pre></p>

				{% if is_granted("ROLE_USER") %}
				<p><a class="btn btn-primary" href="{{ path('decrypt', {'idMovie': movie.id}) }}">Ajouter une critique</a></p>
				{% endif %}
			</div>

		</div>
		<div class="row">
			<div class="col-md-4">
				<h2 class="text-center">HYPOTHESE DE FIN</h2>
				<div class="display-Decrypt">
					<div class="btn-group">
						
	
					{{ tools.buttonLink(movie.id,"-100","F","-100",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"-300","F","-300",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"+300","F","+300",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"read","F","+lus",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"liked","F","+likés",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"comment","F","+commentés",filter_end,filter_seq) }}
					
					</div>
				
				{{render(controller('UkronicBundle:Decrypt:display',{'idMovie': movie.id ,'filter': filter_end ,'typeDecrypt':'F'})) }}

				</div>
				
				

				
			</div>
			<div class="col-md-4 col-md-offset-2">
				<h2 class="text-center">SEQUENCE</h2>

				<div id="sequence-decrypt">
					<div class="btn-group">
	
					{{ tools.buttonLink(movie.id,"-100","S","-100",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"-300","S","-300",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"+300","S","+300",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"read","S","+lus",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"liked","S","+likés",filter_end,filter_seq) }}
					{{ tools.buttonLink(movie.id,"comment","S","+commentés",filter_end,filter_seq) }}
					
					</div>

				{{render(controller('UkronicBundle:Decrypt:display',{'idMovie': movie.id,'filter': filter_seq ,'typeDecrypt':'S'})) }}

				</div>
				
			</div>
		</div>

	</div>


{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
	$(function(){
		$(".decrypt-display-change").click(function(){
			console.log("bouton cliqué");

			$("#sequence-decrypt").html();
		});
	});
	</script>
    
{% endblock %}