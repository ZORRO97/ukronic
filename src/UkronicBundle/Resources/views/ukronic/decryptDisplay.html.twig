{% extends 'UkronicBundle::layout.html.twig' %}

{% block content %}
	<div class="row">

		
	

		<h2 class="text-center">Décryptage</h2>
		<div class="col-md-4 col-md-offset-4">
			<p><img class="img-responsive center-block" src="{{ decrypt.movie.posterURL }}" alt="image Film"></p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		<p class="text-center"> {{ decrypt.movie.title }}</p>
		<p class="text-center"> Titre décryptage : {{ decrypt.title }} </p>
		<p class="text-center"> "{{ decrypt.content }}" 
			{% if user != "anon." %}
				{% if not liked  %}
				<a href="{{ path('decryptLike', {'id' : decrypt.id }) }}" class="btn btn-primary btn-like">LIKE</a>
				{% else %}
					<a href="#" class="btn btn-info">Liked</a>
				
				{% endif %}	
			{% endif %}
		</p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2 class="text-center">Commentaires</h2>
			{% if user != "anon." %}
			{{ form_start(form) }}
			
			<p class="text-center"></p>
			<div>
			{{ form_widget(form.content,{'attr':{'id':'comContent',
				'placeholder':'Entrez un commentaire',
				'class':'form-control',
				'rows':5
			}}) }}
			</div>
			
			{{ form_widget(form.save) }}
			{{ form_end(form) }}
			{% endif %}
			{% if decrypt.comments is not empty  %}
				{% for comment in decrypt.comments %}
				    <p>
				    	{{ comment.dateComment | date("d/m/Y h:i") }} {{ comment.content }}
				    </p>
				{% endfor %}
			{% endif %}
		</div>
	</div>
    
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
	$(function(){
		
	});

	</script>
    
{% endblock %}