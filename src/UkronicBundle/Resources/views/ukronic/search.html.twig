{% extends 'UkronicBundle::layout.html.twig' %}

{% block content %}
<div class="container">
{#<h1 class="text-center">UKRONIC</h1> #}


<div class="row">
	<h2 class="text-center">Rechercher un Film</h2>
	<div class="col-md-4 col-md-push-4">
		{{ form_start(form) }}
		{{ form_widget(form.title) }}
		{{ form_widget(form.save)}}
		{{ form_end(form) }}
	</div>
</div>
<div>
	
	
	<div class="row">
		{% if message.Search is defined %}
			{% for item in message.Search %}
				
				
				<div class="col-md-4 col-lg-4 col-xs-12 decrypt">
				<a href="{{ path("movie", {'imdbID': item["imdbID"] , 'typeMovie' : 'F'}) }}">
					<img class="img-responsive" src= {{ item["Poster"] }} >
					<p class ="text-center"> {{ item["Year"] }} </p>
					<p class="text-center"> {{ item["Title"] }} </p>
					
				</a>
				</div>
			    
			{% endfor %}
		{% else %}
			<p class="text-center">Pas de r√©sultat</p>
		{% endif %}
	</div>
	
</div>
</div>    
{% endblock %}