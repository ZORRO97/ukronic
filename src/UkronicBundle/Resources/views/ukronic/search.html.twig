{% extends 'UkronicBundle::layout.html.twig' %}

{% block content %}
<div class="container">



<div class="row">
	
	<h2 class="text-center">Films</h2>
	
	
<div>
	
	
	<div class="row">
		{% if movies is defined %}
			{% for item in movies %}
				
				
				<div class="col-md-2 col-lg-2 col-xs-3 movie-content">
					<div class="movie">
						<a href="{{ path("dbukronic", {'id': item.id}) }}">
							<img class="img-responsive" src= {{ item.posterURL }} >
							<div class="movie-content">
							<h3 class="title-movie"> {{ item.title }} </h3>
							<p class ="vintage"> {{ item.productionYear }} </p>
							</div>
						</a>
					</div>
				</div>
			    
			{% endfor %}
			{#
		{% else %}
			<p class="text-center">Pas de r√©sultat</p>
			#}
		{% endif %}
	</div>
	
</div>
</div>    
{% endblock %}