{% extends 'UkronicBundle::layout.html.twig' %}

{% block content %}
<div class="container">
{#<h1 class="text-center">UKRONIC</h1> #}


<div class="row">
	
	<h2 class="text-center">Films</h2>
	
	<div></div>
	<div class="col-md-4 col-md-push-4">
		{{ form_start(form) }}
		<div class="form-group">
			{{ form_errors(form.title) }}
		{{ form_widget(form.title,{'value':"",'attr':{'class':'form-control','placeholder':"Entrez un nom"}}) }}
		</div>
		<div class="form-group">
		{{ form_widget(form.save)}}
		</div>
		{{ form_end(form) }}
	</div>
</div>
<div>
	
	
	<div class="row">
		{% if message.Search is defined %}
			{% for item in message.Search %}
				
				
				<div class="col-md-4 col-lg-4 col-xs-12 movie-content">
					<div class="movie">
						<a href="{{ path("movie", {'imdbID': item["imdbID"] , 'typeMovie' : 'F'}) }}">
							<img class="img-responsive" src= {{ item["Poster"] }} >
							<div class="movie-content">
							<h3 class="title-movie"> {{ item["Title"] }} </h3>
							<p class ="vintage"> {{ item["Year"] }} </p>
							</div>
						</a>
					</div>
				</div>
			    
			{% endfor %}
			{#
		{% else %}
			<p class="text-center">Pas de r√©sultat</p>
			#}
		{% endif %}
	</div>
	
</div>
</div>    
{% endblock %}