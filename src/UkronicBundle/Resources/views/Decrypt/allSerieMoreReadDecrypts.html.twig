{# allMovieMoreReadDecrypts.html.twig #}
{% extends 'UkronicBundle::layout.html.twig' %}

{% block content %}
	
	<div id="fh5co-blog" class="fh5co-bg-section">
		<div class="container">
			
			
			<div class="row animate-box">
				<div class="col-md-8 fh5co-heading">
					<h2>Les séries décryptées les plus lues</h2>
				</div>
			</div>
			
			<div class="row">
				
				{% if results is not empty %}
					{% for item in results %}
						

						<div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
							<div class="decrypt">
								<a href="{{ path('dbukronic', {'id': item.movie.id}) }}"><img class="img-responsive" src="{{ item.movie.posterURL }}" alt=""></a>
								<div class="decrypt-text">
									<h3 class="title-movie"><a href="{{path('dbukronic-serie',{'id':item.movie.id})}}">{{ item.movie.title }}</a></h3>
									<p> <a href="{{path('dbukronic-serie',{'id':item.movie.id})}}">"{{ item.movie.episodeTitle }}" </a></p>
									<p>Saison {{ item.movie.season }} Episode {{ item.movie.episode }}</p>
									<p>{{ item.nbRead }} <img class="icon-ukronic" src="{{ asset('images/side-view-of-sitting-man-reading_318-29449.jpg') }}" alt="lecture">{#lecture(s)#}</p>

								</div> 
							</div>
						</div>

					    
					{% endfor %}
				{% endif %}
				
			</div>

			

		</div>
	</div>
{% endblock %}