{% macro displayCheckImage(chemin) %}
	
	{% if remote_file_exists(chemin) %}
		<img class="img-responsive" src= "{{ chemin }}" >
	{% else %}
		{% set couleur = random(['black','blue','dark-blue','dark-green','green','grey','orange','pink','purple'])  %}
		<img class="img-responsive" src= "{{ asset('images/lunettes-' ~ couleur ~ '.png') }}" >
	{% endif %}
{% endmacro %}



